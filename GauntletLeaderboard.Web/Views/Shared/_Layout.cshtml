<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Gauntlet Leaderboards</title>
    @Styles.Render("~/Content/bootstrap")
    @Styles.Render("~/Content/font-awesome")
    @Styles.Render("~/Content/app")
</head>
<body>
    <nav class="navbar navbar-inverse">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Gauntlet Leaderboards", "Groups", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            
            <div id="navbar" class="collapse navbar-collapse">
                
                <div class="navbar-form navbar-right" role="search">
                    <div id="currently-playing" data-url="@Url.RouteUrl("total-players")">Currently In-Game: <span></span></div>
                    <div class="input-group">
                        <input type="text" class="form-control" id="search" placeholder="Steam ID64 / Custom URL">
                        <span class="input-group-btn">
                            <a href="#" class="btn btn-default" data-path="@Url.Action("Search", "Players", new { id = "" })"><span class="fa fa-search" aria-hidden="true"></span></a>
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </nav>
    <div class="container" role="main">
        @RenderBody()

        <footer>
            <a href="http://steampowered.com" title="Powered by Steam" class="fa fa-steam-square"></a>
            <a href="https://github.com/Rfvgyhn/gauntlet-leaderboards" title="Fork Me" class="fa fa-github-square"></a>
        </footer>
    </div>
    
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/app")
    @RenderSection("scripts", required: false)
@if (!HttpContext.Current.IsDebuggingEnabled) {
    <script>
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

      ga('create', 'UA-61900107-1', 'auto');
      ga('send', 'pageview');

    </script>
}
</body>
</html>
