@model GauntletLeaderboard.Web.Models.Home.LeaderboardViewModel

@{
    ViewBag.Title = string.Format("{0}::{1}::{2}", Model.Leaderboard.Group, Model.Leaderboard.SubGroup, Model.Leaderboard.Name);
}

@Html.Partial("_Groups", Model.Groups)
@Html.Partial("_SubGroups", Model.SubGroups)
@Html.Partial("_Leaderboards", Model.Leaderboards)

<div class="text-center">Special: @Model.Leaderboard.Special</div>
<table id="leaderboard" class="table table-striped">
    <thead>
        <tr>
            <th>Rank</th>
            <th>Player</th>
            <th>Score</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var entry in Model.Entries) {
        <tr>
            <td>@entry.Rank</td>
            <td>@Html.ActionLink(entry.Player.PersonaName, "Details", "Players", new { id = entry.SteamId }, null)</td>
            <td>@entry.Score</td>
        </tr>
    }
    </tbody>
</table>

@Html.Partial("_Pager", Model)